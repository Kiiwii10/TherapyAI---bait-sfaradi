<!-- res/values-night/themes.xml -->
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Base.Theme.TherapyAI" parent="Theme.Material3.DayNight.NoActionBar">

        <!-- Material 3 Color Attributes -->
        <item name="colorPrimary">@color/m3_primary_dark</item>
        <item name="colorOnPrimary">@color/m3_on_primary_dark</item>
        <item name="colorPrimaryContainer">@color/m3_primary_container_dark</item>
        <item name="colorOnPrimaryContainer">@color/m3_on_primary_container_dark</item>
        <item name="colorSecondary">@color/m3_secondary_dark</item>
        <item name="colorOnSecondary">@color/m3_on_secondary_dark</item>
        <item name="colorSecondaryContainer">@color/m3_secondary_container_dark</item>
        <item name="colorOnSecondaryContainer">@color/m3_on_secondary_container_dark</item>
        <item name="colorTertiary">@color/m3_tertiary_dark</item>
        <item name="colorOnTertiary">@color/m3_on_tertiary_dark</item>
        <item name="colorTertiaryContainer">@color/m3_tertiary_container_dark</item>
        <item name="colorOnTertiaryContainer">@color/m3_on_tertiary_container_dark</item>
        <item name="colorError">@color/m3_on_error_dark</item>
        <item name="colorOnError">@color/m3_error_dark</item>
        <item name="colorErrorContainer">@color/m3_error_container_dark</item>
        <item name="colorOnErrorContainer">@color/m3_on_error_container_dark</item>
        <item name="android:colorBackground">@color/m3_background_dark</item>
        <item name="colorOnBackground">@color/m3_on_background_dark</item>
        <item name="colorSurface">@color/m3_surface_dark</item>
        <item name="colorOnSurface">@color/m3_on_surface_dark</item>
        <item name="colorSurfaceVariant">@color/m3_surface_variant_dark</item>
        <item name="colorOnSurfaceVariant">@color/m3_on_surface_variant_dark</item>
        <item name="colorOutline">@color/m3_outline_dark</item>
        <item name="colorOutlineVariant">@color/m3_outline_variant_dark</item>
        <item name="colorSurfaceInverse">@color/m3_inverse_surface_dark</item>
        <item name="colorOnSurfaceInverse">@color/m3_inverse_on_surface_dark</item>
        <item name="colorPrimaryInverse">@color/m3_inverse_primary_dark</item>
        <!-- Add other M3 attributes as needed -->
        <item name="colorSurfaceContainerLowest">@color/m3_surface_container_lowest_dark</item>
        <item name="colorSurfaceContainerLow">@color/m3_surface_container_low_dark</item>
        <item name="colorSurfaceContainer">@color/m3_surface_container_dark</item>
        <item name="colorSurfaceContainerHigh">@color/m3_surface_container_high_dark</item>
        <item name="colorSurfaceContainerHighest">@color/m3_surface_container_highest_dark</item>

        <!-- Status Bar & Navigation Bar -->
        <item name="android:statusBarColor">?attr/colorSurface</item>
        <item name="android:navigationBarColor">?attr/colorSurfaceContainerLow</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">false</item>


        <!-- Map YOUR Custom Attributes to Material 3 Roles -->
        <item name="colorPrimaryBackground">?attr/colorSurface</item>
        <item name="colorOnPrimaryBackground">?attr/colorOnSurface</item>
        <item name="colorSecondaryBackground">?attr/colorSurfaceContainerLow</item>

        <item name="colorCategoryBtn">?attr/colorSurfaceContainerHigh</item>
        <item name="colorSelectedCategoryBtn">?attr/colorPrimaryContainer</item>
        <item name="colorOnCategoryBtnText">?attr/colorOnSurfaceVariant</item>


        <!-- Define Custom Styles (Reference the definitions from values/themes.xml) -->
        <!-- No need to redefine styles here unless you want dark-specific overrides -->
        <item name="materialCardViewOutlineStyle">@style/Widget.App.CardView.Outlined</item>

        <item name="positiveSentimentColor">@color/sentiment_positive</item>
        <item name="neutralSentimentColor">@color/sentiment_neutral</item>
        <item name="negativeSentimentColor">@color/sentiment_negative</item>
        <item name="mixedSentimentColor">@color/sentiment_mixed</item>
        <item name="therapistIndicatorColor">@color/therapist_indicator_color</item>

    </style>

    <!-- No need to redefine Theme.TherapyAI or Widget styles unless specifically overriding for dark theme -->

</resources>

